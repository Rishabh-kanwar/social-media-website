<header class="header">
    <span class="heading-style"><i class="fas fa-users" style="color: white;"></i></i> Socio</span>

    <ul class="header-display">
        <% if (locals.user){ %>
            <li>
                <a href="/users/profile/<%= user.id%>">
                    <%= user.name %>
                </a>
            </li>
            <li>
                <a href="/users/sign-out">Sign Out</a>
            </li>
        <% }else{ %>

            <li>
                <a href="/users/sign-in">Sign In</a>
            </li>

            <li>
                <a href="/users/sign-up">Sign Up</a>
            </li>


        <% } %>
    </ul>

</header>